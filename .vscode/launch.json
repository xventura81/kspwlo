    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kspwlo",
            "args": ["-f", "${input:inputFile}", "-k", "${input:k}", "-t", "${input:t}", "-s", "0", "-d", "${input:d}", "-a", "${input:algorithm}"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/kspwlo.exe",
            "args": ["-f", "${input:inputFile}", "-k", "${input:k}", "-t", "${input:t}", "-s", "0", "-d", "${input:d}", "-a", "${input:algorithm}"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        }
    ],
    "inputs": [
        {
            "id": "inputFile",
            "type": "promptString",
            "description": "graph file",
            "default": "${workspaceFolder}/sample/sample.gr"
        },
        {
            "id": "k",
            "type": "promptString",
            "description": "number of searched paths",
            "default": "5"
        },
        {
            "id": "t",
            "type": "promptString",
            "description": "similarity threshold",
            "default": "0.5"
        },
        {
            "id": "d",
            "type": "promptString",
            "description": "destination node",
            "default": "20"
        },
        {
            "id": "algorithm",
            "type": "pickString",
            "description": "algorithm",
            "options": [
                "op",
                "mp",
                "opplus",
                "svpplus",
                "esx",
                "svp-c",
                "esx-c"
              ],
            "default": "op"
        },
    ]
}